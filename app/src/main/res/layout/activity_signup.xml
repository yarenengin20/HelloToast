<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/signupbeige"
    tools:context=".signup"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/abel"
        android:text="Hello!\nLet's get started."
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="30sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext"
        app:cornerRadius="20dp"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="45dp"
            android:background="@color/loginpink">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="30dp"
                android:fontFamily="@font/abel"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signup_name"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/softgreen"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:hint="Name"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/baseline_edit_24"
                android:fontFamily="@font/abel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signup_email"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/smail"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:hint="Email"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:fontFamily="@font/abel"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signup_username"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/profileinfo"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:hint="Username"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:fontFamily="@font/abel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/signup_password"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/spasswordpurple"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:fontFamily="@font/abel"/>


    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:onClick="cprofile"
        android:text="Sign Up"
        android:fontFamily="@font/abel"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        />

</LinearLayout>